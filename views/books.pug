html(lang="en")
  head
    title Books
    link(rel="stylesheet" href="stylesheets/style.css")
    link(rel="stylesheet" href="stylesheets/custom.css")
  body
    #content
      include includes/header.pug
      #main
        h1 Books
        div
          a(href='/new_book' class='button') Create New Book
        ul.filters
          li.nodivide Filters
          li
            a(href="/books") All
          li
            a(href="/books?filter=overdue") Overdue
          li
            a(href="/books?filter=checkedout") Checked Out
        table
          thead
            tr
              th Title
              th Author
              th Genre
              th Year Released
          tbody
            each book in books
              tr
                td
                  a(href='book_detail?id=' + book.id)= book.title
                td= book.author
                td= book.genre
                td= book.first_published