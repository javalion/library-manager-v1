html(lang="en")
  head
    title Patrons
    link(rel="stylesheet" href="stylesheets/style.css")
    link(rel="stylesheet" href="stylesheets/custom.css")
  body
    #content
      include includes/header.pug
      #main
        h1 Patrons
        a.button(href='/new_patron') Create New Patron
        div &nbsp;
        table
          thead
            tr
              th Name
              th Address
              th Email
              th Library ID
              th Zip
          tbody
            each patron in patrons
              tr
                td= patron.first_name + " " + patron.last_name
                td= patron.address
                td= patron.email
                td= patron.library_id
                td= patron.zip_code