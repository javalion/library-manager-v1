html(lang="en")
  head
    title Patrons
  body
    #content
      include includes/header.pug
      #main
        h1 Patrons
        a(href='/new_patron')
          button Create New Patron
        table
          thead
            tr
              th Name
              th Address
              th Email
              th Library ID
              th Zip
          tbody
            each patron in patrons
              tr
                td= patron.first_name + " " + patron.last_name
                td= patron.address
                td= patron.email
                td= patron.library_id
                td= patron.zip_code