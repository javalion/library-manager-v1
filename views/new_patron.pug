html(lang="en")
  head
    title New Patron
    link(rel="stylesheet" href="stylesheets/style.css")
    link(rel="stylesheet" href="stylesheets/custom.css")
  body
    #content
      include includes/header.pug
      #main
        h1 New Patron
        form(action="/new_patron" method="POST" enctype="application/x-www-form-urlencoded")
          p
            label(for="first_name") First Name
            input(id="first_name" name="first_name" onkeyup="validateField('first_name')" type="text")
            span(id="first_name_error" class="error") Required
          p
            label(for="last_name") Last Name
            input(id="last_name" name="last_name" onkeyup="validateField('last_name')" type="text")
            span(id="last_name_error" class="error") Required
          p
            label(for="address") Address
            input(id="address" name="address" onkeyup="validateField('address')" type="text")
            span(id="address_error" class="error") Required
          p
            label(for="email") Email
            input(id="email" name="email" onkeyup="validateField('email')" type="text")
            span(id="email_error" class="error") Required
          p
            label(for="library_id") Library ID
            input(id="library_id" name="library_id" onkeyup="validateField('library_id')" type="text")
            span(id="library_id_error" class="error") Required
          p
            label(for="zip_code") Zip Code
            input(id="zip_code" name="zip_code" onkeyup="validateField('zip_code')" type="text")
            span(id="zip_code_error" class="error") Required
          p
            input(type="submit" onclick="return validatePatronForm()" value="Create New Patron")
    script(src="js/main.js" type="text/javascript" charset="UTF-8")